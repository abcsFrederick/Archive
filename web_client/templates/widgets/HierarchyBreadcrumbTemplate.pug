- var idx = 0
each obj in links
  li
    a.g-breadcrumb-link(style='padding: 0px; display:inline-block',g-index=idx)
      if obj.type === 'projects'
        i.icon-sitemap
        = obj.object.name
      else if obj.type === 'experiments'
        = obj.get('nci_projects_name')
      else if obj.type === 'patients'
        = obj.get('title')
      else if obj.type === 'studies'
        = obj.get('pat_name')
      else if obj.type === 'series'
        = obj.get('study_description')
  - idx += 1

if current
  li.active
    if current.type === 'projects'
      i.icon-sitemap
      = current.object.name
    else if current.type === 'experiments'
      = current.get('nci_projects_name')
    else if current.type === 'patients'
      = current.get('title')
    else if current.type === 'studies'
        = current.get('pat_name')
    else if current.type === 'series'
        = current.get('study_description') 
if descriptionText
  a.g-description-preview= descriptionText

.pull-right
  .g-child-count-container.hide
    .g-subfolder-count-container(title='total folders')
      i.icon-folder
      .g-subfolder-count

